<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#C6B08E"
    tools:context=".Feedback">


    <RatingBar
        android:id="@+id/ratingbar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="224dp"
        android:numStars="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:progressBackgroundTint="@color/darkgold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/feedback_message_id"
        android:layout_width="328dp"
        android:layout_height="141dp"
        android:layout_marginTop="68dp"
        android:background="@color/lightpeach"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter you feedback"
        android:inputType="textMultiLine"
        android:lines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingbar_id" />

    <Button
        android:id="@+id/send_feedback_id"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:background="#8A7B4D"
        android:text="Send Feedback"
        app:backgroundTint="#6E5D2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_message_id"
        app:layout_constraintVertical_bias="0.397" />

    <TextView
        android:id="@+id/rateview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/feedback_message_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingbar_id" />

</androidx.constraintlayout.widget.ConstraintLayout>